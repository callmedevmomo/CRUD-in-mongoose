extends layout/main.pug


block content
    .movie__info
        a(href=routes.movieEdit(movie._id)) 
            h3 ✏️ Edit Movie
        h3.movie__title=`✅TITLE : ${movie.title}`        
        h3.movie__name=`✅UPLOADER : ${movie.id}`
        h3.movie__year=`✅Year Of Release : ${movie.year}`
        h4.movie__rating= `⭐️Rating : ${movie.rating}` 
        h4.movie__genres=`🧐Genres : [${movie.genres}]`
        h6.movie__createdAt= `Uploaded Date:${movie.uploadedAt}`
        p.movie__synopsis= movie.synopsis
        